generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  assistant
}

model User {
  id          String   @id
  displayName String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt       // <-- FINAL: auto-updates on write

  messages    Message[]
  facts       Fact[]
}


model Message {
  id        String   @id @default(cuid())
  role      Role
  content   String
  createdAt DateTime @default(now())

  // NEW: link to User
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
}

model Fact {
  id        String   @id @default(cuid())
  key       String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // NEW: link to User
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, key])
}
